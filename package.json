{
  "name": "smartweave",
  "version": "0.3.2",
  "description": "Uses lazy-evaluation to move the burden of contract execution from network nodes to smart contract users.",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "version": "npx @pika/pack",
    "build": "rimraf pkg && npx @pika/pack && cp-cli pkg/dist-src/bin pkg/dist-node && npx rollup --config=rollup.config.js && tar -zcvf smartweave-package.tgz pkg/"
  },
  "bin": {
    "smartweave-cli": "dist-node/bin/smartweave-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArweaveTeam/SmartWeave.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArweaveTeam/SmartWeave/issues"
  },
  "homepage": "https://github.com/ArweaveTeam/SmartWeave#readme",
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-bundle-web"
      ]
    ]
  },
  "dependencies": {
    "@types/yargs": "^15.0.5",
    "arweave": "^1.7.1",
    "logdown": "^3.3.1",
    "loglevel": "^1.6.8",
    "loglevel-plugin-prefix": "^0.8.4",
    "promises-tho": "^1.1.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-deno": "^0.9.2",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-bundle-web": "^0.9.2",
    "@pika/plugin-simple-bin": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@pika/types": "^0.9.2",
    "cp-cli": "^2.0.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
