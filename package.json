{
  "name": "smartweave",
  "version": "0.3.2",
  "description": "Uses lazy-evaluation to move the burden of contract execution from network nodes to smart contract users.",
  "main": "pkg/dist-node/index.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "version": "npx @pika/pack",
    "build": "rimraf pkg && npx @pika/pack && cp-cli pkg/dist-src/bin pkg/dist-node && npx rollup --config=rollup.config.js && tar -zcvf smartweave-package.tgz pkg/",
    "lint": "eslint --ext .ts,.js src/ examples/ rollup.config.js",
    "lint:fix": "npm run lint -- --fix"
  },
  "bin": {
    "smartweave-cli": "dist-node/bin/smartweave-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArweaveTeam/SmartWeave.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArweaveTeam/SmartWeave/issues"
  },
  "homepage": "https://github.com/ArweaveTeam/SmartWeave#readme",
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-bundle-web"
      ]
    ]
  },
  "dependencies": {
    "arweave": "^1.9.1",
    "bignumber.js": "^9.0.0",
    "typescript": "^4.0.2",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-deno": "^0.9.2",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-bundle-web": "^0.9.2",
    "@pika/plugin-simple-bin": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@pika/types": "^0.9.2",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "cp-cli": "^2.0.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-node-polyfills": "^0.2.1"
  }
}
